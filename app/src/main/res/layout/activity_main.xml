    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/screenOne"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/screenTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="#84d8bf"
        android:padding="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="viewEnd"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/screenTwo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:layout_above="@+id/buttonsLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#84d8bf"
        android:padding="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="viewEnd" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonsLayout"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="AC"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plusOrMinusBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="+/-"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/percentBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="%"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divideBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="7"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="8"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="9"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplyBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:text="x"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fiveBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="5"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sixBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="6"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minusBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oneBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/twoBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/additionBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zeroBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="0"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dotBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="."/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equalToBtn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>